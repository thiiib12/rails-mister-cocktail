<h1><%= @cocktail.name %> </h1>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> of <%= dose.ingredient.name %> <%= link_to "Delete", dose_path(dose), method: :delete %></li>
  <% end %>
</ul>
<br>
<p>
  <h3>Add an ingredient! </h3>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.association :ingredient, collection: Ingredient.order(:name), prompt: "Choose ingredients" %>
    <%= f.input :description, :label => 'Quantity' %>
    <%= f.button :submit, 'Add!', class:"btn btn-primary w-50"%>
  <% end %>
</p>
